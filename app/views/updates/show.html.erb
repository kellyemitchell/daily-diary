<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      <%= @update.author %> - <%= @update.date.to_formatted_s(:long) %> 
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/updates" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

<% if @current_user == @update.administrator %>
      <div class="col">
        <a href="/delete_update/<%= @update.id %>" class="btn btn-block btn-outline-secondary">
          Delete update
        </a>
      </div>
      <% end %>
    </div>
   

   

    <dl>

      <dt>
        Reminders
      </dt>
      <dd>
        <%= @update.reminders %>
      </dd>

      <dt>
        Meals and snacks
      </dt>
      <dd>
        <%= @update.meals_and_snacks %>
      </dd>

      <dt>
        Activities
      </dt>
      <dd>
        <%= @update.activities %>
      </dd>

    </dl>
  </div>
</div>



<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <table class="table">
      <tr>

        <th>
          Photos
        </th>

        <th>
          Caption
        </th>
        
      </tr>

       <% @update.update_photos.each do |photo| %>
      <tr>

        <td>
          <img src ="<%= photo.image_url %>">
        </td>

        <td>
          <%= photo.caption %>
        </td>
        
      <% end %>
    
    </table>

    <% if @current_user == @update.administrator %>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h2>
      Edit update
    </h2>

    <form action="/modify_update/<%= @update.id %>"  method="post" >
      <div class="form-group">
        <label for="provider_id_box">
          Provider
        </label>

        <input type="text" id="provider_id_box" name="provider_id_from_query" class="form-control" value="<%= @update.provider_id %>">
      </div>

      <div class="form-group">
        <label for="reminders_box">
          Reminders
        </label>

        <input type="text" id="reminders_box" name="reminders_from_query" class="form-control" value="<%= @update.reminders %>">
      </div>

      <div class="form-group">
        <label for="meals_and_snacks_box">
          Meals and snacks
        </label>

        <textarea id="meals_and_snacks_box" name="meals_and_snacks_from_query" class="form-control" rows="3"><%= @update.meals_and_snacks %></textarea>
      </div>

      <div class="form-group">
        <label for="activities_box">
          Activities
        </label>

        <input type="text" id="activities_box" name="activities_from_query" class="form-control" value="<%= @update.activities %>">
      </div>

      <div class="form-group">
        <label for="date_box">
          Date
        </label>

        <input type="date" id="date_box" name="date_from_query" class="form-control" value="<%= @update.date %>">
      </div>

      <button class="btn btn-block btn-outline-secondary">
        Update update
      </button>
    </form>
  </div>
</div>

<% end %>

<hr>
