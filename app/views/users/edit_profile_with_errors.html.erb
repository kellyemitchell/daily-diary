<div >
  <h5>
    Edit User Account
  </h5>

  <% if @user.errors.any? %>
  <% @user.errors.full_messages.each do |message| %>
    <div class="alert">
      <%= message %>
    </div>
  <% end %>
  <% end %>
  <div>
    <form action="/patch_user" method="post">
              
      <div>
        <label for="email_box">Email</label>
          
        <input id="email_box" name="email_from_query" value="<%= @current_user.email %>">
          
      </div>
                                    
      <div>
        <label for="name_box">Name</label>
          
        <input id="name_box" name="name_from_query" value="<%= @current_user.name %>">
          
      </div>
                      
      <div>
        <label for="child_name_box">Child name</label>
          
        <input id="child_name_box" name="child_name_from_query" value="<%= @current_user.child_name %>">
          
      </div>
                      
      <div>
        <label for="provider_box">Provider</label>
          
        <input id="provider_box" name="provider_from_query" type="checkbox" value="1">
          
      </div>
              
      <div>
        <label for="password_box">Password</label>
        <input id="password_box" name="password_from_query" placeholder="Choose a new password..." type="password">
      </div>
    
      <div>
        <label for="password_confirmation_box">Password Confirmation</label>
        <input id="password_confirmation_box" name="password_confirmation_from_query" placeholder="Confirm your new password..." type="password">
      </div>

      <button>
        Update account
      </button>
    </form>
  </div>
</div>
