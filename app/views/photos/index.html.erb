<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      List of all photos
    </h1>
  </div>
</div>

<hr>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h2>
      Add a new photo
    </h2>

    <form action="/insert_photo" method="post">
      <div class="form-group">
        <label for="update_id_box">
          Update
        </label>

        <input type="text" id="update_id_box" name="update_id_from_query" class="form-control">
      </div>

      <div class="form-group">
        <label for="image_url_box">
          Image url
        </label>

        <input type="text" id="image_url_box" name="image_url_from_query" class="form-control">
      </div>

      <div class="form-group">
        <label for="caption_box">
          Caption
        </label>

        <input type="text" id="caption_box" name="caption_from_query" class="form-control">
      </div>

      <button class="btn btn-block btn-outline-secondary">
        Create photo
      </button>
    </form>
  </div>
</div>

<hr>
<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Update
        </th>

        <th>
          Image url
        </th>

        <th>
          Caption
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @photos.each do |photo| %>
      <tr>
        <td>
          <%= photo.id %>
        </td>

        <td>
          <%= photo.update_id %>
        </td>

        <td>
          <%= photo.image_url %>
        </td>

        <td>
          <%= photo.caption %>
        </td>

        <td>
          <%= time_ago_in_words(photo.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(photo.updated_at) %> ago
        </td>

        <td>
          <a href="/photos/<%= photo.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
