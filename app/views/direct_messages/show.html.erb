<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Direct message #<%= @direct_message.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/direct_messages" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <a href="/delete_direct_message/<%= @direct_message.id %>" class="btn btn-block btn-outline-secondary">
          Delete direct message
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Sender
      </dt>
      <dd>
        <%= @direct_message.sender_id %>
      </dd>

      <dt>
        Receiver
      </dt>
      <dd>
        <%= @direct_message.receiver_id %>
      </dd>

      <dt>
        Body
      </dt>
      <dd>
        <%= @direct_message.body %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@direct_message.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@direct_message.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h2>
      Edit direct message
    </h2>

    <form action="/modify_direct_message/<%= @direct_message.id %>"  method="post" >
      <div class="form-group">
        <label for="sender_id_box">
          Sender
        </label>

        <input type="text" id="sender_id_box" name="sender_id_from_query" class="form-control" value="<%= @direct_message.sender_id %>">
      </div>

      <div class="form-group">
        <label for="receiver_id_box">
          Receiver
        </label>

        <input type="text" id="receiver_id_box" name="receiver_id_from_query" class="form-control" value="<%= @direct_message.receiver_id %>">
      </div>

      <div class="form-group">
        <label for="body_box">
          Body
        </label>

        <textarea id="body_box" name="body_from_query" class="form-control" rows="3"><%= @direct_message.body %></textarea>
      </div>

      <button class="btn btn-block btn-outline-secondary">
        Update direct message
      </button>
    </form>
  </div>
</div>

<hr>
