<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      Direct messages
    </h1>
  </div>
</div>

<hr>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">

    <form action="/insert_direct_message" method="post">

      <div class="form-group">
        <label for="receiver_id_box">
          To:
        </label>
        <select name="receiver_id_from_query" id="receiver_id_box" class="form-control">
          <% @current_user.user_provider_subscribers.each do |family| %>

          <option value="<%= family.id %>"> <%= family.name %> </option>
          
          <% end %>
  
        </select>
      </div>

      <div class="form-group">
        <label for="body_box">
          Message
        </label>

        <textarea id="body_box" name="body_from_query" class="form-control" rows="3"></textarea>
      </div>

      <button class="btn btn-block btn-outline-secondary">
        Send direct message
      </button>
    </form>
  </div>
</div>

<hr>
<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Sender
        </th>

        <th>
          Receiver
        </th>

        <th>
          Body
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @direct_messages.each do |direct_message| %>
      <tr>
        <td>
          <%= direct_message.id %>
        </td>

        <td>
          <%= direct_message.sender_id %>
        </td>

        <td>
          <%= direct_message.receiver_id %>
        </td>

        <td>
          <%= direct_message.body %>
        </td>

        <td>
          <%= time_ago_in_words(direct_message.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(direct_message.updated_at) %> ago
        </td>

        <td>
          <a href="/direct_messages/<%= direct_message.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
