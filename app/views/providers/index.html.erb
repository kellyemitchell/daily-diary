<% if @current_user.provider == true %>

<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      Create a New Childcare Provider Account
    </h1>
    <h3>
    Sole providers may skip location field if needed
    </h3>
  </div>
</div>

<hr>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">

    <form action="/insert_provider" method="post">
      <div class="form-group">
        <label for="name_box">
          Name
        </label>

        <input type="text" id="name_box" name="name_from_query" class="form-control">
      </div>

      <div class="form-group">
        <label for="location_box">
          Location
        </label>

        <input type="text" id="location_box" name="location_from_query" class="form-control">
      </div>

      <div class="form-group">
        <label for="description_box">
          Description
        </label>

        <textarea id="description_box" name="description_from_query" class="form-control" rows="3"></textarea>
      </div>

      <button class="btn btn-block btn-outline-secondary">
        Create provider account
      </button>
    </form>
  </div>
</div>

 

<% else %> 

<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      Subscribe to a Provider Account
    </h1>
  </div>
</div>

<hr>

<hr>
<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        

        <th>
          Name
        </th>

        <th>
          Administrator
        </th>

        <th>
          Location
        </th>

        <th>
          Description
        </th>

        <th>
        </th>
      </tr>

      <% @providers.each do |provider| %>
      <tr>

        <td>
          <%= provider.name %>
        </td>

        <td>
          <%= provider.admin_name %>
        </td>

        <td>
          <%= provider.location %>
        </td>

        <td>
          <%= provider.description %>
        </td>

        <td>
          <a href="/providers/<%= provider.id %>">
            Subscribe
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>


<hr>

<% end %>